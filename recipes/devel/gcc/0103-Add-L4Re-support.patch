index b3269cb88e0..0be2eee5757 100644
--- a/libstdc++-v3/crossconfig.m4
+++ b/libstdc++-v3/crossconfig.m4
@@ -174,6 +174,15 @@ case "${host}" in
 
     GCC_CHECK_TLS
     ;;
